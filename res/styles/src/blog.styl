.posts--blog
	margin 0 auto
	max-width 80%
	padding 30px 0px

.post-title__container
	h1
		font-size 2.5em

.bpost
	
	&__container
		padding 30px 0px
		width 60%
	
	&__content
		padding 30px 0px
		width 60%
		font-family "Iowan Old Style"
		font-size 1.2em
		line-height 1.6em
		color #13535e
		margin 0 auto
		
		&__author
			font-family "Iowan Old Style"
			font-size 1.4em
			color rgba(#13535e, 0.6)
			width 60%
			margin 0 auto
			margin-bottom 45px
			text-align right
			
			&--intro
				font-style italic
			
			&--name
				font-weight bold
		
		&:first-child:first-letter
			float left
			font-size 6em
			line-height 6rem
			padding-right 20px
			font-weight 800

.flex
	display flex !important
	justify-content center
	flex-direction column

.page__details
	width 50%
	margin 0 auto
	padding-top 20px
	padding-bottom 20px
	border-bottom 1px solid gray
	font-family sans-serif
	
	&__body
		padding-top 10px
		line-height 20px
		
		&__alert
			font-size 0.9em
			padding-top 20px
			font-weight bold
			
		
	&__title
		font-size 1.2em
		font-weight bold

.admin-post
	width 50%
	margin 0 auto
	display flex
	flex-direction column
	
	border-bottom 1px solid gray
	padding-bottom 20px
	padding-top 10px
	
	&__section
		margin 5px
		
		&__body
			margin-top 10px
	
	&__header
		
		&__tags
			display flex
			
			&__tag
				font-size 0.7em
				text-transform uppercase
				background-color lighten(gray, 30)
				color lighten(black, 50)
				font-weight bold
				font-family sans-serif
				padding 4px 10px
				border-radius 10px
				margin-right 7px
			
		
		&__title
			display flex
			
			> *
				margin-right 15px
				margin-top 10px
				margin-bottom 10px
			
			&__alert
				display inline-block
				font-size 0.7em
				text-transform uppercase
				background-color lighten(gray, 10)
				color lighten(black, 20)
				font-weight bold
				font-family sans-serif
				padding 4px 10px
				border-radius 10px
				margin-right 15px
				
			&__title
				font-size 1.3em
			











