.form
	width 80%
	margin 0 auto
	
	&__group
		padding 10px 0px
		font-family sans-serif

		h2
			font-weight bold
			font-size 1.2em
			padding 4px 0px
			
		p
			padding 4px 0px
			padding-bottom 8px
			
		input[type=text]
			width 100%
			height 30px
			font-size 1.1em
			
		&__submit
			margin 10px 0px
			padding 10px
			font-size 1.3em
			
		textarea
			width 100%
			height 100px
			font-size 1.1em
