.header
  background-color #eee
  font-family "Iowan Old Style"
  box-shadow 0px 9px 24px 3px rgba(0,0,0,0.77)
  
  //position fixed

  &__container
    padding 25px 0px
    max-width 800px
    margin 0 auto

    display flex
    align-items center
    justify-content space-between
    flex-direction row

  &__logo
    color #007586

    > h1
      display flex
      flex-direction column
      align-items center

    &__upper
      font-size 1em
      font-weight 800
      text-transform uppercase

    &__lower
      font-size 2.95em
      font-weight 200
      font-style italic

  &__nav

    > ul
      > li
        width 85px
        display inline-block
        text-align center

        > a
          padding 8px 8px
          font-size 1.15em
          font-weight 600
          text-decoration none
          color #13535e

          &:hover
            border-bottom 2px solid #c9c9c9
            margin-bottom -2px
            font-weight 800
            
.global-title
  background-image url("/br.png")
  background-size cover
  background-position -20px
  
  &__container
    padding 50px
    
    > *
      text-align center
  
  h1
    font-family "Iowan Old Style"
    font-size 5em
    font-weight 800
    color white
    margin-bottom 10px
    
  h2
    font-family "Iowan Old Style"
    font-size 1.5em
    font-weight 400
    font-style italic
    color #9dc5c9
    
    
    
