@import "nib"

.no-posts
  font-family "Iowan Old Style"
  padding 20px 40px
  padding-bottom 40px
  text-align center
  color #13535e
  
.hero
  background-image url("br.png")
  background-size cover

  &__container
    display flex
    justify-content space-around
    align-items center
    
    width 1000px
    margin 0 auto

    padding 50px 0px

  &__call
    font-family "Iowan Old Style"
    color white

    &__title
      font-size 2.55em
      font-weight bold
      padding-bottom 10px

      span
        display block

    &__subtitle
      font-size 1.25em
      font-weight 800
      text-transform uppercase
      color #80bac1

.thoughts
  background-color #b6d2d6
  
  &__button
    border-radius 5px
    padding 10px 30px
    
    display block
    
    color #13535e
    background-color #d6eaed
    
    font-family "Helvetica Neue"
    font-weight bold
    font-size 0.8em
    letter-spacing 0.2em
    text-transform uppercase
    text-decoration none
    
    box-shadow 0 10px 20px rgba(0,0,0,0.12), 0 6px 6px rgba(0,0,0,0.12)

  &__container
    width 1000px
    margin 0 auto
    padding-bottom 40px

    display flex
    justify-content space-around

  &__section
    width 43%

    &__title
      font-family "Iowan Old Style"
      text-align center
      padding 25px 0px

      h2
        font-size 2.5em
        font-weight 800
        color #13535e

      h3
        padding-top 8px
        font-size 1.15em
        color #4f787f
    
    &__list
      display flex
      flex-direction column
      align-items center

.hpost
  display block
  font-family "Iowan Old Style"
  margin-bottom 20px
  padding 20px
  
  border-radius 8px
  border 1px solid #a8c1c4
  background-color #c5e2e6
  
  transition all 0.4s
  
  text-decoration none
  
  &:hover
    box-shadow 0 10px 20px rgba(0,0,0,0.08), 0 6px 6px rgba(0,0,0,0.08)

  &__title

    h2
      font-size 1.5em
      font-weight 300
      color #13535e
      
      padding-bottom 5px
    
    h3
      color darken(#a8c1c4, 30%)
      padding-bottom 8px
      
    &__group
      border-bottom 1px solid #a8c1c4

    &__tags
      margin 5px 0px
      
      &__title
        font-family "Helvetica Neue"
        font-size 0.55em
        font-weight 600
        text-transform uppercase
        letter-spacing 1.3px
        color #5f6f70

        display inline-block

        margin-right 5px

    &__tag
      padding 4px
      margin 5px 0px
      margin-right 5px

      
  &__outlined-box
    display inline-block
    font-family "Helvetica Neue"
    font-size 0.55em
    font-weight 600
    text-transform uppercase
    letter-spacing 1.3px
    color #5f6f70
    
    background-color #a5bec2

    border-radius 5px
    border 1px solid #95abae
      
  &__body
    color #5f6f70
    padding-bottom 10px
    
    strong
      font-weight bold
      text-decoration underline
    
  &__buttons
    a
      padding 5px 10px
      font-size 1.0em
      text-transform none
      text-decoration none
      color #5f6f70
      
      &:hover
        text-decoration underline
    
.hplanner
  background-color #eee
  width 410px
  font-family "Iowan Old Style"
  
  box-shadow 0 3px 6px rgba(0,0,0,0.10), 0 3px 6px rgba(0,0,0,0.15)
  border-radius 5px
  
  &__title
    padding 15px
    padding-bottom 23px
    text-align center
    
    display flex
    align-items center
    justify-content center

    h2
      font-size 2.25em
      font-style italic
      color #13535e
      
      margin-right 12px
      
    h3
      font-size 1.0em
      font-weight 800
      text-transform uppercase
      color #1d7a89
      
  &__buttons
    padding 24px 20px
    text-align center
    
    a
      border 1px solid #1d7a89
      border-radius 5px
      padding 4px 15px
      margin 0px 10px
      
      color #1d7a89
      font-weight 600
      text-decoration none
      
      transition all 0.4s
      
      &:hover
        background-color #1d7a89
        color #eee
        
  &__events
    perspective 1000px
    perspective-origin 50% 50%
        
.hshow
  display flex
  font-family "Iowan Old Style"
  
  width 110%
  margin-left -5%
  margin-top -12px
  
  transform rotateX(20deg)
  transition all 0.4s
  
  box-shadow 0 10px 20px rgba(0,0,0,0.08), 0 6px 6px rgba(0,0,0,0.10)
  text-decoration none
  
  &:hover
    transform rotateX(0deg)
  
  // Fix just for Safari...
  > div:first-child
    flex 1 0 auto
  
  &__left
    background-color #adcfd3
    color #13535e
    
  &__right
    background-color #13535e
    color #adcfd3
    padding 15px 25px
    
  &__date
    display flex
    flex-direction column
    align-items center
    
    padding 15px 25px
    
    &__month
      font-size 1.0em
      font-weight 800
      text-transform uppercase
      
      margin-bottom 5px
      
    &__num
      font-style italic
      
      display flex
      
      &__num
        font-size 3em
        font-weight 800
        
      &__raised
        margin-left 3px
        margin-top 5px
        font-size 1.75em
        
  &__title
    font-weight 800
    font-size 1.0em
    margin-bottom 5px
    
  &__description
    font-size
    color #8ea9ac
    
.call-bar
  width 1000px
  height 150px
  margin 0 auto
  display flex
  justify-content space-between
  
  &__badge
    background-color black
    border-radius 10px
    color white
    font-family sans-serif
    font-size 1rem
    font-weight 800
    text-transform uppercase
    padding 8px 24px
    
    &--on-air
      display inline-block
      margin 10px 0
      background-color #127888

  &__left
    position relative
    overflow hidden
    
    > *
      position relative
      display inline-block
    
    &__thinker
      bottom -20px
      width 210px
    
    &__title
      font-family "Iowan Old Style"
      font-weight 800
      font-size 2.3em
      
    &__container
      position relative
      top -105px
      left -23px
      
  &__right
    font-family "Iowan Old Style"
    color black
    margin-right 30px
    
    &__header
      font-size 1.4rem
      font-weight 800
      padding 10px 0px
      padding-top 30px
    
    &__lower-container
      font-size 1.1rem
      color darken(gray, 20)
      
      > *
        padding 5px 0px
        
      span
        margin-left 6px
        padding 1px 5px
        background-color #127888
        border-radius 10px
        color #eee
        
      a
        color darken(gray, 20)
        text-decoration none
        
        &:hover
          text-decoration underline

.section--call-bar
  background-color #eee

