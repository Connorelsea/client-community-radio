@import "nib"

.header
  display flex
  flex-direction row

  font-family "Iowan Old Style"

  &__logo

    > h1
      display flex
      flex-direction column
      align-items center

    &__upper
      font-size 1em
      font-weight 800
      text-transform uppercase

    &__lower
      font-size 2.65em
      font-weight 200
      font-style italic